<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/songimg"
        android:layout_width="117dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/siu" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ay 7ad"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:layout_alignTop="@+id/songimg"
        android:layout_toEndOf="@+id/songimg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songname"
        android:layout_below="@+id/username"
        android:text="a7eih"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/songimg"
        />

    <TextView
        android:id="@+id/plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_play_arrow_black_24dp"
        android:text="220k"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/songimg"
        android:layout_alignBottom="@+id/songimg"/>
    <TextView
        android:id="@+id/songlength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/username"
        android:text="4:52"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="@color/grey"/>
    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/songimg"/>

</RelativeLayout>